@model RevAppoint.Client.Models.CustomerViewModel;

@{
    ViewData["Title"] = "Selected Professional Info";
}

@using (@Html.BeginForm("CreateAppointment", "Customer", FormMethod.Get))
{
  var prof = @Model.Professional;
          <div class="card-body">
            <div class = "row">
                <div class="col">
                    <h4 class="card-title">@prof.FirstName @prof.LastName</h4>
                    <label class="card-text">Bio:</label>
                    <p class="card-text">@prof.Bio </p>
                </div>

                <figure class="row figure card-image rounded float:right">
                    <img class="figure-img img-fluid" src="https://placeimg.com/320/240/nature" alt="Card image cap">
                </figure>
            </div>
        </div>
<div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <label>Username:</label>
        <p class="card-text">@prof.Username</p>
      </li>
      <li class="list-group-item">
        <label>Title:</label>
        <p class="card-text">@prof.Title</p>
      </li>
      <li class="list-group-item">
        <label>Spoken Language:</label>
        <p class="card-text">@prof.Language</p>
      </li>
      <li class="list-group-item">
        <label>Locaton:</label>
        <p class="card-text">@prof.Location</p>
      </li>
      <li class="list-group-item">
        <label>Appointment Length (Hours):</label>
        <p class="card-text">@prof.AppointmentLengthInHours</p>
        <input name = "AppointmentLengthInHours" value="@prof.AppointmentLengthInHours" hidden = "true">

      </li>
      <li class="list-group-item">
        <label>HourlyRate:</label>
        <p class="card-text">@prof.HourlyRate</p>
        <input name = "HourlyRate" value="@prof.HourlyRate" hidden = "true">
      
      </li>
      <li class="list-group-item">
        <label>Joined on:</label>
        <p class="card-text">@prof.MemberSince.ToString("MM/dd/yyyy")</p>
      </li>
      <li class="list-group-item">
        <label>Rating:</label>
        <p class="card-text">@prof.Rating</p>
      </li>
    </ul>
    <div class="card-body">
      <input class = "customButton" type="submit" value="Create Appointment"/>
    </div>
  </div>
  <input name = "Username" value = @Model.Username hidden ="true">
  <input name = "SearchedProfessionalsUsername" value = @Model.SearchedProfessionalsUsername hidden ="true">
  <input name = "Professional.HourlyRate" value="@Model.Professional.HourlyRate" hidden = "true">
  <input name = "Professional.AppointmentLengthInHours" value="@Model.Professional.AppointmentLengthInHours" hidden = "true">
}
