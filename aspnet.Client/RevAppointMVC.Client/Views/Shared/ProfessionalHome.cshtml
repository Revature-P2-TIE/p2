@model RevAppoint.Client.Models.UserModel;

@{
    ViewData["Title"] = "ProfessionalHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* Note that this will break when we route back to the ProfessionalHome method (since we're only passing a username) *@
<h2>Hello, @Model.FirstName</h2> 

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">View My Profile</h5>
        <p class="card-text">View and Edit your information</p>
        @using (@Html.BeginForm("ViewProfile", "Professional",new {id = @Model.Username}, FormMethod.Get))
        {
          <input type="submit" value="View My Profile"/>
        }
      </div>
    </div>
  </div>
  <div class="col-md-6">
        <div class="card">
      <div class="card-body">
        <h5 class="card-title">Current Appointments</h5>
        <p class="card-text">View Current Appointments</p>
        @using (@Html.BeginForm("CurrentAppointments", "Professional",new {id = @Model.Username}, FormMethod.Get))
        {
          <input type="submit" value="View Current Appointments"/>
        }
      </div>
    </div>
        <div class="card">
      <div class="card-body">
        <h5 class="card-title">Pending Appointments</h5>
        <p class="card-text">View Pending Appointments</p>
        @using (@Html.BeginForm("PendingAppointments", "Professional",new {id = @Model.Username}, FormMethod.Get))
        {
          <input type="submit" value="View Pending Appointments"/>
        }
      </div>
    </div>
        <div class="card">
      <div class="card-body">
        <h5 class="card-title">Appointment History</h5>
        <p class="card-text">View Your Old Appointments</p>
        @using (@Html.BeginForm("AppointmentHistory", "Professional",new {id = @Model.Username}, FormMethod.Get))
        {
          <input type="submit" value="View History"/>
        }
      </div>
    </div>
  </div>
</div>

