@model RevAppoint.Client.Models.CustomerViewModel;

<header>Choose a User</header>
@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
<br>
@using (@Html.BeginForm("SelectUser", "Customer", FormMethod.Post))
{
  @Html.AntiForgeryToken()
  <ol>
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @foreach (var item in Model.Customers)
  {
    <li>@Html.RadioButtonFor(m => m.Username, item.Username)
    @Html.LabelFor(m => m.Username, item.Username)</li>
  }
  </ol>
  <input type="submit" value="Choose User" style="float: left;"/>
}

<br>

<form action ="/Professional/ProfessionalHome/" method="get">
  <ol>
  @foreach (var item in Model.Professionals)
  {
    
      <li> 
        <input type="radio" asp-for="@Model.Username" value="@item.Username">
        <label for="@item">@item.Username</label><br>
      </li>
    
  }
  </ol>
  <button type="submit" class ="button" >Continue as Professional</button>
</form>

@using (@Html.BeginForm("AccountCreationCustomer", "Customer", FormMethod.Post))
{
  <input type="submit" value="Create a customer account" style="float: left;"/>
}

@using (@Html.BeginForm("AccountCreationProfessional", "Customer", FormMethod.Post))
{
  <input type="submit" value="Create a customer account" style="float: left;"/>
}